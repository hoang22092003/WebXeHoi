@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/IndexLogin.css" />
</head>
<body>
    <section>
        <div class="form-box">
            <div class="form-value">
                <form id="account" method="post">
                    <h2>Login</h2>
                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input asp-for="Input.Email" type="email" class="form-control" required placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input asp-for="Input.Password" type="password" class="form-control" required placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="forget">
                        <label>
                            <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" />
                            Remember Me
                        </label>
                        <a href="./ForgotPassword">Forget Password</a>
                    </div>
                    <button id="login-submit" type="submit">Log in</button>
                    <div class="register">
                        <p>Don't have an account <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a></p>
                        <p><a asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
