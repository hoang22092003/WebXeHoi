@model WebXeHoi.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card mt-4">
                <div class="card-header">
                    <h4 class="card-title">Thông tin chi tiết sản phẩm</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Tên:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3">Giá:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

                        <dt class="col-sm-3">Mô tả:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3">Ảnh:</dt>
                        <dd class="col-sm-9">
                            <img src="@Model.ImageUrl" class="img-fluid product-image" alt="Ảnh sản phẩm">
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Chỉnh sửa</a>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại trang chính</a>
                </div>
            </div>
        </div>
    </div>
</div>
